<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyblue"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/img1"
            app:civ_border_width="2dp"
            android:layout_marginEnd="16dp"
            app:civ_border_color="@color/babypink"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameText_id"
            android:text="Cupcake Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CuCate_id"
            android:text="category"
            android:textColor="@color/black"
            android:layout_below="@+id/nameText_id"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CuDes_id"
            android:text="description"
            android:textColor="@color/black"
            android:layout_below="@+id/CuCate_id"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CuPrice"
            android:text="Cupcake Price"
            android:textColor="@color/black"
            android:layout_below="@+id/CuDes_id"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_below="@id/CuPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/BTN_edit_id"
                android:layout_marginEnd="8dp"
                android:textSize="20sp"
                android:text="Edit"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/babypink" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/BTN_delete_id"
                android:textSize="20sp"
                android:text="Delete"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/babypink" />



        </LinearLayout>








    </RelativeLayout>

</androidx.cardview.widget.CardView>